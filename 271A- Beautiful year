#include<bits/stdc++.h>
using namespace std;

int main(){
    int y,d1;
    cin>>y;
    set<int> set1;
    while(true){
       int k=++y;
        for(int i=0;i<4;i++){
            d1=k%10;
            set1.insert(d1);
            k=k/10;
            
        }
        if(set1.size()==4){
            cout<<y;
            return 0;
        }
        set1.clear();
    }
}
