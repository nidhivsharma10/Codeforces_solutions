#include<bits/stdc++.h>
using namespace std;

int main(){
    int n,total=0,my=0,count=1,t=0,i;
    cin>>n;
    int arr[n];
    for( i=0;i<n;i++){
        cin>>arr[i];
        total+=arr[i];
    }
    sort(arr,arr+n);
    for( i=0;2*t<=total;i++){
       t=t+arr[n-i-1]; 
    }
    cout<<i;
    return 0;
}
